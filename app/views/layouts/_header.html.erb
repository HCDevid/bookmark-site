<header>
	<%= link_to 'User Index', users_path %>
	<% if current_user.nil? %>
		<%= link_to 'Log In', login_path %>
		<%= link_to 'Sign Up', signup_path %>
		<%= link_to 'Save Your Links', temp_users_path %>  
	<% else %>
		<% if current_user.username.nil? #temp user %>
			Logged in <%= link_to 'Upgrade to a full account', edit_user_path(current_user)%>
		<% else %>
			Logged in as <%=link_to current_user.username, current_user %>
		<% end %>
		<%= link_to 'Log Out', logout_path %>
	<% end %>

	<% if flash[:notice] %>
		<div class="notice"> <%= flash[:notice] %></div>
	<% end %>
	<% if params[:message] %>
		<div class="message"> <%= params[:message] %></div>
	<% end %>
</header>